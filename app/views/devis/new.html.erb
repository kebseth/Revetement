<h1 class="mt-5 text-center">Demande de devis</h1>
<div class="container">
  <%= form_for @devis do |f| %>
  <%= f.label :name, class: 'mt-5 text-form' %> <br>
  <%= f.text_field :name, required: true, class: 'w-50 field-form' %>
  <br>

  <%= f.label :email %> <br>
  <%= f.text_field :email, required: true, class: "w-50 field-form" %>
  <br>

  <%= f.label :message %> <br>
  <%= f.text_field :message, required: true, class: "w-100 field-form area-form" %>
  <br>

  <%= f.submit 'Envoyer message', class: 'centerize mt-5 btn btn-contact' %>
  <% end %>
</div>
